rounded($radius) 
  -webkit-border-radius $radius
  -moz-border-radius $radius
  border-radius $radius


.vehicle.messages
  > article div.item
    width:100%
    clear:both
    display:inline-table
    border-bottom:1px solid #ccc
    padding:30px
    font-weight:normal
    color: #656565
    > ul 
      list-style:none;
      > li
        padding:0;
        margin:0;
        vertical-align:middle;
      > li.bold-text
        font-weight:bold
    > .table
      vertical-align:middle
      display:inline-table
      margin-right:20px
    > .image-placehoder
      width:90px
      height:70px
      border:1px solid #4c6f97
      background-color: #f4f4f4
    > .how-many
      rounded (10px)
      background-color blue
      padding 10px
      color white
    > .dealership
      color:#656565