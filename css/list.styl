.vehicle.messages
  > article div.item
    width 100%
    clear both
    display inline-table
    border-bottom 1px solid #ccc
    padding 0
    font-weight normal
    color  #656565
    > div.vehicle-container
      border-bottom:1px dashed #999999
      padding: 5px 0 5px 0
      > .table
        vertical-align middle
        display inline-table
      > span.how-many
        rounded (30px)
        background-color blue
        color white
        margin 0 5px 0 5px
        padding 3px
      > span.image-placehoder
        width 90px
        height 70px
        border 1px solid #4c6f97

      > ul 
        list-style none
        padding 0
        margin 0 5px 0 5px
        > li
          padding 0
          margin 0
          vertical-align middle
        > li.bold-text
          font-weight bold
    > ul.message-detail
      padding 5px 5px 5px 0
      margin 0
      list-style none
      > li span.bold-text
        font-weight:bold
        margin-left:10px
      > li.table
        vertical-align middle
        display inline-table

.vehicle-details
  > div.dark-blue
    background-color:#003366;
  > div.vehicle-detail
    height:60px
    > ul.vehicle-description-white
      list-style: none;
      padding:0;
      margin:10px 0 0 10px;
      > li.sub-text
        color:#333;
        font-weight:normal;
      > li.sub-text-white
        color:#fff;
        font-weight:normal;

  > div.messages
    > ul
      padding: 0
      margin:0
      > li.message-blue
        background-color:#dcecfb;

      > li.message-light-blue
        background-color:#eef5fd;

      > li.message-blue-border
        border-bottom:1px solid #c9cdd0;

      > li 
        img.message-blue-angle
          position: absolute;
          right:10px;
          top:-1px;

      > li.message-gray-border
        border-bottom:1px solid #cdcdcd;

      > li
        > img.message-gray-angle
          position: absolute;
          left:10px;
          top:-1px;

      > li.message-gray
        background-color:#f5f5f5;

      > li.message-light-gray
        background-color:#fafafa;

      > li.top-message
        padding:5px 5px 5px 10px;

      > li.bottom-message
        padding:5px 5px 5px 10px;



